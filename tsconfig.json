{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es2019",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "types": ["node", "jest"]
  },
  "exclude": [
    "node_modules"
  ]
}